<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ListadoCategorias" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <property name="com.jaspersoft.studio.data.defaultdataadapter" value="One Empty Record"/>

    <!-- Parámetro para mostrar el criterio de orden -->
    <parameter name="order" class="java.lang.String"/>

    <field name="id" class="java.lang.Integer"/>
    <field name="descripcion" class="java.lang.String"/>

    <background>
        <band splitType="Stretch"/>
    </background>

    <title>
        <band height="60" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="10" width="555" height="40"/>
                <textElement textAlignment="Center">
                    <font fontName="Arial Black" size="20"/>
                </textElement>
                <text><![CDATA[Listado de Categorías]]></text>
            </staticText>
            <textField>
                <reportElement x="420" y="45" width="200" height="15"/>
                <textFieldExpression><![CDATA[new java.text.SimpleDateFormat("dd/MM/yyyy").format(new java.util.Date())]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <pageHeader>
        <band height="25" splitType="Stretch">
            <textField>
                <reportElement x="10" y="0" width="300" height="20"/>
                <textFieldExpression><![CDATA["Ordenado por: " + $P{order}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <columnHeader>
        <band height="25" splitType="Stretch">
            <staticText>
                <reportElement x="10" y="0" width="100" height="20"/>
                <text><![CDATA[Id]]></text>
            </staticText>
            <staticText>
                <reportElement x="150" y="0" width="300" height="20"/>
                <text><![CDATA[Descripción]]></text>
            </staticText>
            <line>
                <reportElement x="10" y="22" width="510" height="1"/>
            </line>
        </band>
    </columnHeader>

    <detail>
        <band height="20" splitType="Stretch">
            <textField>
                <reportElement x="10" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{id}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="0" width="300" height="20"/>
                <textFieldExpression><![CDATA[$F{descripcion}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="20" splitType="Stretch">
            <textField>
                <reportElement x="400" y="0" width="150" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
